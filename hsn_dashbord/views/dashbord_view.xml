	     </record>

 <record model="ir.actions.act_window" id="action_dashbord_critere">
      <field name="name">CRITERES DASHBORD</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">dashbord.critere</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="dashbord_critere_tree"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Cliquer ici pour composer des criteres
        </p>
      </field>
    </record>


     <record id="dashbord_produitstock_kanban" model="ir.ui.view">
        <field name="name">dashbord.produitstock.kanban</field>
        <field name="model">dashbord.produitstock</field>
        <field name="arch" type="xml">
            <kanban default_group_by="dashstate" class="o_kanban_small_column" edit="false" create="false" quick_create="false">
                <field name="id"/>
                <field name="dashstate"/>
                <progressbar field="dashstate" colors='{"termine": "success", "encours": "warning", "afaire": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="product_id"/>
                                    <small t-if="record.default_code">[<field name="default_code"/>]</small>
                                </strong>
                                <div name="tags"/>
                                <ul>
                                    <li>Prix: <field name="lst_price"></field> / Stock: <field name="qty_available"></field></li>
                                </ul>
                                <div name="tags"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
		 	<record id="dashbord_produitstock_form" model="ir.ui.view">
	         <field name="name">dashbord.produitstock.form</field>
             <field name="model">dashbord.produitstock</field>
             <field name="arch" type="xml">
	         <form string="dashbords">
                      <sheet>
                      <group>
                        <group>
							<field name="product_id" />
							<field name="lst_price" />
							<field name="default_code" />
							<field name="barcode" />
							<field name="qty_available" />
							<field name="uom_id" />
							<field name="dashstate" />
                        </group>
                      </group>

                    </sheet>
                </form>
			</field>
	     </record> 
		 
        <record id="dashbord_produitstock_tree" model="ir.ui.view">
	         <field name="name">dashbord.produitstock.tree</field>
             <field name="model">dashbord.produitstock</field>
             <field name="arch" type="xml">
	         <tree string="dashbords">
							<field name="product_id" />
							<field name="lst_price" />
							<field name="default_code" />
							<field name="barcode" />
							<field name="qty_available" />
							<field name="uom_id" />
							<field name="dashstate" />

                </tree>
			</field>
	     </record>
	            <record id="dashbord_produitstock_pivot" model="ir.ui.view">
	         <field name="name">dashbord.produitstock.pivot</field>
             <field name="model">dashbord.produitstock</field>
             <field name="arch" type="xml">
	         <pivot string="dashbords">
							<field name="product_id" type="row" />
			                                <field name="lst_price" type="measure"/>
							<field name="default_code" type="measure" />
							<field name="qty_available" type="measure" />

                </tree>
			</field>
	     </record>
		 <record id="dashbord_produitstock_search" model="ir.ui.view">
	         <field name="name">dashbord.produitstock.search</field>
             <field name="model">dashbord.produitstock</field>
             <field name="arch" type="xml">
	         <search string="dashbords">
							<field name="name"/>
                </search>
			</field>
	     </record>

