<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="dashbord_templatestock_kanban" model="ir.ui.view">
        <field name="name">dashbord.templatestock.kanban</field>
        <field name="model">dashbord.templatestock</field>
        <field name="arch" type="xml">
            <kanban default_group_by="dashstate" class="o_kanban_small_column" edit="false" create="false" quick_create="false">
                <field name="id"/>
                <field name="dashstate"/>
                <progressbar field="dashstate" colors='{"termine": "success", "encours": "warning", "afaire": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <small t-if="record.default_code">[<field name="default_code"/>]</small>
                                </strong>
                                <div name="tags"/>
                                <ul>
                                    <li>Prix: <field name="lst_price"></field> / Stock: <field name="qty_available"></field></li>
                                </ul>
                                <div name="tags"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
		 	<record id="dashbord_templatestock_form" model="ir.ui.view">
	         <field name="name">dashbord.templatestock.form</field>
             <field name="model">dashbord.templatestock</field>
             <field name="arch" type="xml">
	         <form string="dashbords">
                      <sheet>
                      <group>
                        <group>
							<field name="name" />
							<field name="lst_price" />
							<field name="default_code" />
							<field name="barcode" />
							<field name="qty_available" />
							<field name="uom_id" />
							<field name="dashstate" />
                        </group>
                      </group>

                    </sheet>
                </form>
			</field>
	     </record> 
		 
        <record id="dashbord_templatestock_tree" model="ir.ui.view">
	         <field name="name">dashbord.templatestock.tree</field>
             <field name="model">dashbord.templatestock</field>
             <field name="arch" type="xml">
	         <tree string="dashbords">
							<field name="name" />
							<field name="lst_price" />
							<field name="default_code" />
							<field name="barcode" />
							<field name="qty_available" />
							<field name="uom_id" />
							<field name="dashstate" />

                </tree>
			</field>
	     </record>
		 <record id="dashbord_templatestock_search" model="ir.ui.view">
	         <field name="name">dashbord.templatestock.search</field>
             <field name="model">dashbord.templatestock</field>
             <field name="arch" type="xml">
	         <search string="dashbords">
							<field name="name"/>
                </search>
			</field>
	     </record>

