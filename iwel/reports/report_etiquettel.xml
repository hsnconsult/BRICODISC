<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="minimal_layout_inherit" inherit_id="web.minimal_layout">
        <xpath expr="//head" position="inside">
            <link rel='stylesheet' href="/iwel/static/src/css/iwel.css"/>
        </xpath>
    </template>
    <template id="report_etiquettel">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page dimpage">
                        <t t-foreach="o.ligne_etiquette" t-as="l">
                            <div class="etiq">
                                <div class="prixp">
                                    <span t-esc="l.prix"
                                          t-options='{"widget": "monetary", "display_currency": l.currency_id}'/>
                                </div>
                                <div class="nomp">
                                    <span t-esc="l.nomp"/>
                                </div>
                                <div class="refp">
                                    <span t-esc="l.codep"/>
                                </div>
                                <div class="barcode">
                                    <div class="barcodeleft">
                                        <div class="codebi">
                                            <img alt="Barcode" t-if="len(l.barcode) == 13"
                                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', l.barcode, 600, 150)"
                                                 style="width:100%;height::3rem;"/>
                                        </div>
                                        <div class="codeb">
                                            <span t-field="l.barcode"/>
                                        </div>
                                    </div>
                                    <div class="barcoderight">

                                        <span t-esc="l.codef"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
